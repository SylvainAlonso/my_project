<!DOCTYPE html>
<html>
    <head>
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.min.css')}}"/>
      {% for flashMessage in app.session.flashBag.get('success') %}
        <div class="alert alert-success">
          {{flashMessage}}
        </div>
      {% endfor %}
      {% for flashMessage in app.session.flashBag.get('failure') %}
        <div class="alert alert-danger">
          {{flashMessage}}
        </div>
      {% endfor %}
    </head>
    <body>

    <div class="container">
      <h2>Liste des catégories</h2>
      <div class="row">
        <div class="col-xs-12 col-sm-9 col-md-9 col-lg-1">
          <h4>ID</h4>
        </div>
        <div class="col-xs-12 col-sm-9 col-md-9 col-lg-4">
          <h4>Nom</h4>
        </div>
      </div>
      {% for categorie in categories %}
        <div class="row">
          <legend>
            <div class="col-xs-12 col-sm-9 col-md-9 col-lg-1"
             style="color:#A9A9A9">
              {{categorie.id}}
            </div>
            <div class="col-xs-12 col-sm-9 col-md-9 col-lg-4"
             style="color:#A9A9A9">
              {{categorie.name}}
            </div>
            <div class="col-xs-12 col-sm-3 col-md-3 col-lg-1" >
              <a href="{{ path('edit_category', {'id':categorie.id}) }}">
                <span class="glyphicon glyphicon-edit" style="color:#A9A9A9">
                </span>
              </a>
            </div>
            <div class="col-xs-12 col-sm-3 col-md-3 col-lg-2" >
              <a href="{{ path('delete_category', {'id':categorie.id}) }}">
                <span class="glyphicon glyphicon-remove" style="color: #CD5C5C">
                </span>
              </a>
            </div>
          </legend>
          <script src="{{ asset('bootstrap/js/bootstrap.min.js') }}"></script>
        </div>
      {% endfor %}<br>
      <a href="{{ path('new_category') }}">
        <button type="button" class="btn btn-default">Nouvelle catégorie
        </button>
      </a><br><br>
      <a href="{{ path('home') }}">
        <span class="glyphicon glyphicon-arrow-left"></span>
        retour notes
      </a>
    </div>
  </body>
</html>
